$bg: #2e272a
$blueColor: #007cdc
$fontText: Roboto

body
   background: $bg url(../images/bg.png) center top no-repeat
   font-size: 12px
   font-family: $fontText
   -webkit-box-sizing: content-box
   -moz-box-sizing: content-box
   box-sizing: content-box

.landingpage-webapp
   width: 100%
   text-align: center

.landingpage-main
   width: 300px
   margin: auto
   padding-top: 50px
   position: relative
.bubble-logo
   border-radius: 50%
   background: #2f2c2f
   width: 300px
   height: 300px
   text-align: center
   vertical-align: middle
   position: relative
   -webkit-box-shadow: 0px 0px 59px 15px rgba(0,123,220,0.2)
   -moz-box-shadow: 0px 0px 59px 15px rgba(0,123,220,0.2)
   box-shadow: 0px 0px 59px 15px rgba(0,123,220,0.2)

   img
      width: 80%
      margin: auto
      position: absolute
      left: 0
      top: 0
      right: 0
      bottom: 0
.join-us
   width: 300px
   height: 44px
   position: absolute
   bottom: 0
   a
      width: 100%
      display: block
      height: 44px
      border: 1px solid $blueColor
      border-radius: 10px
      color: #fff
      line-height: 44px
      text-decoration: none
      text-transform: uppercase
      font-size: 22px
      font-weight: 300
      text-align: center
   a:hover
      background-color: $blueColor
   span.ic-github
      background: url(../images/ic-github.png) right 7px no-repeat
      width: 90px
      display: block
      margin: auto
      padding-right: 45px
.landingpage-terms
   width: 100%
   clear: both
   display: block
   position: fixed
   bottom: 0
   .term
      border-radius: 50%
      width: 100px
      height: 100px
      background: #ccc url(../images/logo-terms.png) left top no-repeat
      position: absolute
      opacity: 0.8
   .term.java
      background-color: #332e32
      bottom: 10px
      width: 80px
      height: 80px
      background-position: center top
      left: 0
      z-index: 99
      -webkit-animation: playJava 2s infinite
      -moz-animation: playJava 2s infinite
      -ms-animation: playJava 2s infinite
      -o-animation: playJava 2s infinite
      animation: playJava 2s infinite
